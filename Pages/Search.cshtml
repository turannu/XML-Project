@page
@model XML_Project.Pages.SearchModel
@{
    ViewData["Title"] = "Search Breweries";
}

<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Search Breweries</h2>
                </div>
                <div class="card-body">
                    <form method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="state" class="form-label">State</label>
                                <input type="text"
                                       class="form-control"
                                       id="state"
                                       name="State"
                                       value="@Model.State"
                                       placeholder="Enter state name (e.g. California)">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="breweryType" class="form-label">Brewery Type</label>
                                <select class="form-select" id="breweryType" name="BreweryType">
                                    <option value="">Select type</option>
                                    @foreach (var type in new[] { "micro", "nano", "regional", "brewpub", "large", "planning", "bar", "contract", "proprietor", "closed" })
                                    {
                                        var isSelected = Model.BreweryType == type ? "selected" : "";
                                        var displayName = char.ToUpper(type[0]) + type.Substring(1).ToLower();
                                        @Html.Raw($"<option value='{type}' {isSelected}>{displayName}</option>")
                                    }
                                </select>




                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    </form>

                    @if (Model.SearchResults.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Type</th>
                                        <th>City</th>
                                        <th>State</th>
                                        <th>Website</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var brewery in Model.SearchResults)
                                    {
                                        <tr>
                                            <td>@brewery.Name</td>
                                            <td>@brewery.BreweryType</td>
                                            <td>@brewery.City</td>
                                            <td>@brewery.StateProvince</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(brewery.WebsiteUrl?.ToString()))
                                                {
                                                    <a href="@brewery.WebsiteUrl.ToString()" target="_blank" class="btn btn-link">Visit</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else if (Model.State != null || Model.BreweryType != null)
                    {
                        <div class="alert alert-info mt-3">
                            No breweries found matching your search criteria.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>