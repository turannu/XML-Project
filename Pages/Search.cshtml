@page
@model XML_Project.Pages.SearchModel
@{
}
<div class="card mt-5 shadow-sm border-0">
    <div class="card-header bg-dark text-white">
        <h3 class="card-title mb-0 text-center"> Grab a Drink </h3>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="form-group mb-3">
                <label class="form-label" for="brewrycity">
                    <i class="fas fa-city me-2"></i>City
                </label>
                <input type="text" class="form-control" name="BreweryCity" id="brewrycity" placeholder="Enter city name" />
            </div>
            <div class="form-group mb-4">
                <label class="form-label" for="brewrytype">
                    <i class="fas fa-beer me-2"></i>Type
                </label>
                <select class="form-control" name="BreweryType" id="brewrytype">
                    <option value="">Select type</option>
                    <option value="micro">Micro</option>
                    <option value="nano">Nano</option>
                    <option value="regional">Regional</option>
                    <option value="brewpub">Brewpub</option>
                    <option value="large">Large</option>
                    <option value="bar">Bar</option>
                    <option value="contract">Contract</option>
                    <option value="proprietor">Proprietor</option>
                    <option value="closed">Closed</option>
                </select>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-lg px-4">Search</button>
            </div>
        </form>
    </div>
</div>



